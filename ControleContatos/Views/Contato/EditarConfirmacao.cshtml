@model ContatoModel
@{
    ViewData["TITLE"] = "Editar Dados";
}

<div class="text-center">

    <h1 class="display-4">Editar Dados</h1>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do contato">
    </div>
    <div class="mb-3">
        <label for="celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o numero do contato">
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alteração</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index">Voltar</a>
</form>