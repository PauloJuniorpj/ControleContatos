@using ControleContatos.Enums;
@model UsuarioModel
@{
    ViewData["TITLE"] = "Cadastrar Novo Usuário";
}


<div class="text-center">

    <h1 class="display-4">Cadastrar Novo Usuário</h1>

</div>

<form asp-controller="Usuario" asp-action="Salvar" method="post">
    <div class="mb-3">
        <label for="nome">Nome</label>
        <input type="text" asp-for=Name class="form-control" placeholder="Digite o nome do usuário">
        @Html.ValidationMessageFor(x => x.Name)
    </div>
    <div class="mb-3">
        <label for="email">E-mail</label>
        <input type="text" asp-for=Email class="form-control" placeholder="Digite o e-mail do usuário">
        @Html.ValidationMessageFor(x => x.Email)

    </div>
    <div class="mb-3">
        <label for="login">Login</label>
        <input type="text" asp-for=Login class="form-control" placeholder="Digite um Login pra cadastrar">
    </div>

    <div class="mb-3">
        <label for="senha">Senha</label>
        <input type="password" asp-for=Senha class="form-control" placeholder="Digite um Senha pra cadastrar">
    </div>

    <select class="form-select" aria-label="Default select example" asp-for="perfil">
        <option selected>Selecione</option>
        <option value="@PerfilEnum.Admin">Administrador</option>
        <option value="@PerfilEnum.Padrao">Padrão</option>
    </select>
    <br />
    <button type="submit" class="btn btn-primary">Salvar Dados</button>
    <a class="btn btn-secondary" asp-controller="Usuario" asp-action="Index">Voltar</a>
</form>