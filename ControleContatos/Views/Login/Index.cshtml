@model LoginModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Login";
}
<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="form-group">
        <label for="login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Digite seu Login">
        @Html.ValidationMessageFor(x => x.Login)
    </div>
    <div class="form-group">
        <label for="senha">Senha</label>
        <input type="password" asp-for="Senha" class="form-control" placeholder="Senha">
        @Html.ValidationMessageFor(x => x.Senha)

    </div>
    <br />

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" ariel-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
    <br />
    <button type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>